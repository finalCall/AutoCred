<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhruv.app.recieveActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="56dp"
        android:text="Recieve Paymnet From"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userAmount"
        android:layout_width="217dp"
        android:layout_height="60dp"
        android:layout_marginBottom="47dp"
        android:ems="10"
        android:hint="Enter Amount"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/paymentButton"
        app:layout_constraintStart_toStartOf="@+id/username"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <Button
        android:id="@+id/paymentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="176dp"
        android:text="Proceed to Pay"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/userAmount"
        app:layout_constraintTop_toBottomOf="@+id/userAmount" />

    <EditText
        android:id="@+id/username"
        android:layout_width="217dp"
        android:layout_height="53dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:hint="Enter Uesrname"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/userAmount"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/payNavigateButton"
        android:layout_width="254dp"
        android:layout_height="43dp"
        android:layout_marginBottom="77dp"
        android:text="Direct Payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="252dp"
        android:layout_height="26dp"
        android:layout_marginBottom="14dp"
        android:text="Already Logged in your account ?"
        app:layout_constraintBottom_toTopOf="@+id/payNavigateButton"
        app:layout_constraintStart_toStartOf="@+id/payNavigateButton"
        app:layout_constraintTop_toBottomOf="@+id/paymentButton" />
</androidx.constraintlayout.widget.ConstraintLayout>
